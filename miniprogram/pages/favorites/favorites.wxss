page{
  height: 100%;
  width: 750rpx;
  background-color: teal;
  display: flex;
  flex-direction: column;
}
#bodyContainer{
  /* Body will take up the rest of the space apart from the navbar and tabbar */
  flex: 1 0 10px;
  background-color: #f2f2f2;
  display: flex;
  flex-direction: column;
  width: 750rpx;
  overflow: auto;
}
.itemCard{
  background-color: tomato;
  height: auto;
  width: 100%;
  border: 5px solid black;
}

#bodyRow{
  display: flex;
  flex-direction: column;
}
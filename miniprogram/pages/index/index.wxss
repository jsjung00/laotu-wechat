scroll-view{
  box-sizing: border-box;
}

page{
  height: 100%;
  width: 750rpx;
  background-color: violet;
}
#bodyContainer{
  min-height: 100%;
  background-color: #CCD4BF;
  display: flex;
  flex-direction: column;
  width: 750rpx;
}

#aboveSwiperContainer{
  height: 30vh;
  width: 100%;
  background-color: #E7CBA9;
}

#belowSwiperContainer{
  height: 20vh;
  background-color: #EEBAB2;
}

.featureContainer{
  height: 30vh;
  width: 100%;
  background-color: yellow;
  display: flex;
  flex-direction: column;
}
.aboveRow{
  display: flex;
  justify-content: space-between;
  background-color: #D4CFBD
}

.slotContent{
  height: 100%;
  width: 100%;
}

#titleRow{
  display: flex;
  width: 100%;
  border-style: solid;
  flex-wrap: wrap;
  flex-basis: auto;
}
#bodyRow{
  display: flex;
  flex-direction: column;
  font-size: 15px; 
  color:gray
}
#moreButton{
  display: flex;
  justify-content: center;
  align-items: center;
}

#featureProductsContainer{
  display: flex;
  height: 50vh;
  background-color: white;
}

.productContainer{
  flex: 1 0 60%;
  height: 50%;
  display: flex;
  flex-direction: column;
  background-color: #f2f2f2;
  border-radius: 10px;
  border-style: solid;
  border-color: black;
  overflow: hidden;

}
.productImageContainer{
  width: 100%;
  height: 40%;
  /*background-color: thistle;*/
}
.productDescContainer{
  width: 100%;
  flex: 1 0 60%;
  /*background-color: tomato;*/

}






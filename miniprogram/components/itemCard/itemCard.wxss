/* components/itemCard.wxss */
.itemCardContainer{
  /* NOTE: the itemCard component should be in a container with desired size and should have
      <itemCard style="width: 100%; height: 100%"/> */
  height: 100%;
  width: 100%;
  display: flex; 
  background-color: orange;
}
.leftContainer{
  width: 30%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #EBE6E5;
  padding: 40rpx 20rpx 40rpx 20rpx;
}
.rightContainer{
  width: 70%;
  height: 100%;
  display: flex;
  flex-direction: column;
  background-color: #DFD8DC;
  padding: 20rpx 20rpx 20rpx 20rpx;
  overflow: hidden;
}
.topRowContainer{
  width: 100%;
  height: 30%;
  background-color: springgreen;
}
.bodyRowContainer{
  width: 100%;
  /* Body takes up the rest of the container */
  flex-grow:1;
  background-color: steelblue;
}
.bottomRowContainer{
  width: 100%;
  background-color: teal;
}
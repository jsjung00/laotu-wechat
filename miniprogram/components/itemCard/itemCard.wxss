/* components/itemCard.wxss */
view{
  box-sizing: border-box;
}

.itemCardContainer{
  /* NOTE: the itemCard component should be in a container with desired size and should have
      <itemCard style="width: 100%; height: 100%"/> */
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column; 
  background-color: orange;
}
.aboveContainer, .belowContainer{
  height: 10%;
  width: 100%;
}
.mainContainer{
  /* My main container initially starts at 10px tall but grows to take up the rest of the height in the container */
  flex: 1 0 10px;
  width: 100%;
  display: flex;
  background-color: white;
}

.leftContainer{
  width: 30%;
  height: 100%;
  display: flex;
  flex-direction: column;
  background-color: #EBE6E5;
  padding-left: 20rpx;
  padding-right: 20rpx;
}
.thumbPadding{
  width: 100%;
  height: 15%;
}

.rightContainer{
  width: 70%;
  height: 100%;
  display: flex;
  flex-direction: column;
  /*background-color: #DFD8DC;*/
  overflow: hidden;
  padding: 20rpx 20rpx 20rpx 20rpx;
}
.topRowContainer{
  width: 100%;
  height: 20%;
  /*background-color: springgreen;*/
  /*Have max-fontsize with vh trick */
}
.bodyRowContainer{
  width: 100%;
  /* Body takes up the rest of the container */
  flex-grow:1;
  /*background-color: steelblue;*/
}
.bottomRowContainer{
  width: 100%;
  /*background-color: teal;*/
  height: 30%;
}